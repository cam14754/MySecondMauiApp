<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MySecondMauiApp.Components.MainPageButtonComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:components="clr-namespace:MySecondMauiApp.Components"
    x:Name="mainPageButton">

    <Border x:DataType="components:MainPageButtonComponent" BindingContext="{Reference mainPageButton}">
        <VerticalStackLayout>
            <Label Text="{Binding EnteredName}" />
            <Entry Text="{Binding EnteredName}" />
        </VerticalStackLayout>
    </Border>

</ContentView>
