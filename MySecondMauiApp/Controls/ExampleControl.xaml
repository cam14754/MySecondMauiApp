<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MySecondMauiApp.Controls.ExampleControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:MySecondMauiApp.Controls"
    xmlns:converters="clr-namespace:MySecondMauiApp.Converters"
    x:Name="exampleControl">

    <Border x:DataType="controls:ExampleControl" BindingContext="{Reference exampleControl}">
        <VerticalStackLayout>
            <Label Text="{Binding EnteredName, Converter={StaticResource BackwardsConverter}}" />
            <Entry Text="{Binding EnteredName}" />
        </VerticalStackLayout>
    </Border>

</ContentView>
